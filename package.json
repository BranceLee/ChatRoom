{
    "name": "websocket-chat-room",
    "version": "1.0.0",
    "description": "Websocket based group chat app built with Socket.io and React.",
    "main": "index.js",
    "repository": "https://github.com/BranceLee/ChatRoom.git",
    "author": "Brance Lee",
    "license": "MIT",
    "scripts": {
        "server": "nodemon ./server/index.js",
        "start": "webpack-dev-server --mode development",
        "build": "webpack --mode production",
        "fmt": "prettier \"all\" --write \"**/*.{js,jsx,scss}\" --ignore-path .gitignore",
        "lint": "eslint . --ext js,jsx --ignore-path .gitignore "
    },
    "dependencies": {
        "node-sass": "4.13.1",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "socket.io": "2.3.0",
        "socket.io-client": "2.3.0"
    },
    "devDependencies": {
        "@babel/core": "7.7.7",
        "@babel/polyfill": "7.7.0",
        "@babel/preset-env": "7.7.7",
        "@babel/preset-react": "7.7.4",
        "autoprefixer": "9.7.3",
        "babel-loader": "8.0.6",
        "babel-runtime": "6.26.0",
        "clean-webpack-plugin": "3.0.0",
        "css-loader": "3.4.0",
        "eslint": "6.7.2",
        "eslint-config-prettier": "6.7.0",
        "eslint-loader": "3.0.3",
        "eslint-plugin-prettier": "3.1.2",
        "eslint-plugin-react": "7.17.0",
        "html-webpack-plugin": "3.2.0",
        "husky": "3.1.0",
        "lint-staged": "9.5.0",
        "mini-css-extract-plugin": "0.8.2",
        "nodemon": "2.0.2",
        "postcss-loader": "3.0.0",
        "prettier": "1.19.1",
        "sass-loader": "8.0.0",
        "style-loader": "1.0.2",
        "webpack": "4.41.4",
        "webpack-cli": "3.3.10",
        "webpack-dev-server": "3.10.1",
        "webpack-md5-hash": "0.0.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx}": [
            "yarn fmt",
            "yarn lint",
            "git add"
        ]
    }
}
